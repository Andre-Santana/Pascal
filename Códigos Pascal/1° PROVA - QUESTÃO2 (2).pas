PROGRAM quest2 ;
VAR

REFRI1,REFRI2,REFRI3,REFRI,QNTD1,QNTD2,QNTD3:REAL;

BEGIN
  
  WRITELN('QUANTAS LATAS DE 350 ml VOCÊ DESEJA? ');
  READ(REFRI1);
  WRITELN('QUANTAS GARRAFAS DE 600 ml VOCÊ DESEJA? ');
  READ(REFRI2);
  WRITELN('QUANTAS GARRAFAS DE 2 litros VOCÊ DESEJA? ');
  READ(REFRI3);
  
  QNTD1:= 350*REFRI1/1000;
  WRITELN ('LITROS DE 350 ML: ', QNTD1) ;
  
  QNTD2:= 600*REFRI2/1000;
  WRITELN ('LITROS DE 600 ML: ', QNTD2) ;
  
  QNTD3:= 2000*REFRI3/1000;
  WRITELN ('LITROS DE 2 LITROS: ', QNTD3) ;
  
  READKEY;
End.